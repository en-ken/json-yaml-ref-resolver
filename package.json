{
  "name": "json-yaml-ref-resolver",
  "version": "0.0.9",
  "description": "Simple '$ref' key resolver on json and yaml files.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "bin"
  ],
  "bin": {
    "ref-resolver": "bin/index.js"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint src && prettier src --check",
    "build": "rimraf ./lib; tsc",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/en-ken/json-yaml-ref-resolver.git"
  },
  "keywords": [
    "OpenAPI",
    "Swagger",
    "yaml",
    "json",
    "$ref"
  ],
  "author": "en-ken",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/en-ken/json-yaml-ref-resolver/issues"
  },
  "homepage": "https://github.com/en-ken/json-yaml-ref-resolver#readme",
  "dependencies": {
    "commander": "^9.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.21",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.1",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
